generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  email     String   @unique
  createdAt DateTime @default(now())

  uploads      uploadData[] @relation("OwnerUploads")
  sharedPhotos PhotoShare[] @relation("SharedBy") // ‚úÖ Added
}

model uploadData {
  id          Int      @id @default(autoincrement())
  photo       String
  description String
  createdAt   DateTime @default(now())

  userId Int
  user   User @relation("OwnerUploads", fields: [userId], references: [id])

  shares PhotoShare[] // üîÅ Sharing relation
}

model PhotoShare {
  id      Int        @id @default(autoincrement())
  photo   uploadData @relation(fields: [photoId], references: [id])
  photoId Int

  sharedBy   User @relation("SharedBy", fields: [sharedById], references: [id])
  sharedById Int

  sharedWith String
  sharedAt   DateTime @default(now())
}
