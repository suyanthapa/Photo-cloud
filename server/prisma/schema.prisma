
generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  username      String        @unique
  password      String
  email         String        @unique
  createdAt     DateTime      @default(now())

  uploads       uploadData[]  @relation("OwnerUploads")      // Photos the user uploaded
  sharedPhotos  UserSharedPhotos[]                           // Join records for photos shared with the user
}

model uploadData {
  id          Int       @id @default(autoincrement())
  photo       String
  description String
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation("OwnerUploads", fields: [userId], references: [id])

  sharedWith  UserSharedPhotos[]                            // Join records for users this photo is shared with
}

model UserSharedPhotos {
  userId       Int
  uploadDataId Int

  user         User       @relation(fields: [userId], references: [id])
  uploadData   uploadData @relation(fields: [uploadDataId], references: [id])

  @@id([userId, uploadDataId]) // Composite primary key
}
